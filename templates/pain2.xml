<?xml version="1.0" encoding="utf-8"?>
<Document xmlns="urn:iso:std:iso:20022:tech:xsd:pain.002.001.03" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <CstmrPmtStsRpt>
        <GrpHdr>
            <MsgId>{{ data.msg_id }}</MsgId>
            <CreDtTm>{{ data.dttm }}</CreDtTm>
            <CdtrAgt>
                <FinInstnId>
                    <BIC>BOFIIE2D</BIC>
                </FinInstnId>
            </CdtrAgt>
        </GrpHdr>
        <OrgnlGrpInfAndSts>
            <OrgnlMsgId>{{ data.orig_msg_id }}</OrgnlMsgId>
            <OrgnlMsgNmId>PAIN.008.001.02</OrgnlMsgNmId>
            <OrgnlNbOfTxs>{{ data.orig_tx_count }}</OrgnlNbOfTxs>
            <OrgnlCtrlSum>{{ data.orig_sum }}</OrgnlCtrlSum>
        </OrgnlGrpInfAndSts>
        {% for batch in data.batches -%}
        <OrgnlPmtInfAndSts>
            <OrgnlPmtInfId>{{ batch.id }}</OrgnlPmtInfId>
            <OrgnlNbOfTxs>{{ batch.tx_count }}</OrgnlNbOfTxs>
            <OrgnlCtrlSum>{{ batch.sum }}</OrgnlCtrlSum>
            {% for coll in batch.collections -%}
            {% if 'reject_reason' in coll -%}
            <TxInfAndSts>
                <StsId>{{ coll.sts_id }}</StsId>
                <OrgnlEndToEndId>{{ coll.e2e_id }}</OrgnlEndToEndId>
                <TxSts>RJCT</TxSts>
                <StsRsnInf>
                    <Orgtr>
                        <Id>
                            <OrgId>
                                <BICOrBEI>BOFIIE2D</BICOrBEI>
                            </OrgId>
                        </Id>
                    </Orgtr>
                    <Rsn>
                        <Cd>{{ coll.reject_reason }}</Cd>
                    </Rsn>
                </StsRsnInf>
                <OrgnlTxRef>
                    <Amt>
                        <InstdAmt Ccy="EUR">{{ coll.amt }}</InstdAmt>
                    </Amt>
                    <ReqdColltnDt>{{ batch.coll_dt }}</ReqdColltnDt>
                    <CdtrSchmeId>
                        <Id>
                            <PrvtId>
                                <Othr>
                                    <Id>{{ batch.cdtr_scheme_id }}</Id>
                                    <SchmeNm>
                                        <Prtry>SEPA</Prtry>
                                    </SchmeNm>
                                </Othr>
                            </PrvtId>
                        </Id>
                    </CdtrSchmeId>
                    <PmtTpInf>
                        <SvcLvl>
                            <Cd>SEPA</Cd>
                        </SvcLvl>
                        <LclInstrm>
                            <Cd>CORE</Cd>
                        </LclInstrm>
                        <SeqTp>{{ batch.seq_type }}</SeqTp>
                    </PmtTpInf>
                    <MndtRltdInf>
                        <MndtId>{{ coll.mnd_id }}</MndtId>
                        <DtOfSgntr>{{ coll.mnd_sig_dt }}</DtOfSgntr>
                    </MndtRltdInf>
                    <Dbtr>
                        <Nm>{{ coll.dbtr_name }}</Nm>
                    </Dbtr>
                    <DbtrAcct>
                        <Id>
                            <IBAN>{{ coll.dbtr_iban }}</IBAN>
                        </Id>
                    </DbtrAcct>
                    <DbtrAgt>
                        <FinInstnId>
                            <BIC>BOFIIE2D</BIC>
                        </FinInstnId>
                    </DbtrAgt>
                    <CdtrAgt>
                        <FinInstnId>
                            <BIC>BOFIIE2D</BIC>
                        </FinInstnId>
                    </CdtrAgt>
                    <Cdtr>
                        <Nm>{{ batch.cdtr_name }}</Nm>
                    </Cdtr>
                    <CdtrAcct>
                        <Id>
                            <IBAN>{{ batch.cdtr_iban }}</IBAN>
                        </Id>
                        <Ccy>EUR</Ccy>
                    </CdtrAcct>
                </OrgnlTxRef>
            </TxInfAndSts>
            {% endif -%}
            {% endfor -%}
        </OrgnlPmtInfAndSts>
        {% endfor -%}
    </CstmrPmtStsRpt>
</Document>